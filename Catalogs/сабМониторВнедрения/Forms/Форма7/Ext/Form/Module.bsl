
&НаСервере
Процедура ВыполнитьАвтозаполение()
	
	УстановитьПривилегированныйРежим(Истина);
	НовыйЭлемент = Справочники.МаршрутыДвиженияЗаявок.СоздатьЭлемент();
	НовыйЭлемент.ВидДокумента = Справочники.Д_ВидыВнутреннихДокументов.ЗаявкаНаФинансирование;
	НоваяСтрока = НовыйЭлемент.МаршрутИсполнения.Добавить();
	НоваяСтрока.Исполнитель = ПараметрыСеанса.ТекущийПользователь;
	НовыйЭлемент.Записать();
	
	Об = Справочники.Д_ВидыВнутреннихДокументов.СлужебнаяЗаписка.ПолучитьОбъект();
	Об.ИмяДокумента = "Д_СлужебнаяЗаписка";
	Об.Записать();
	
	Об = Справочники.Д_ВидыВнутреннихДокументов.ЗаявкаНаОплату.ПолучитьОбъект();
	Об.ИмяДокумента = "Д_ЗаявкаНаОплату";
	Об.Записать();
	
	Об = Справочники.Д_ВидыВнутреннихДокументов.ЗаявкаНаФинансирование.ПолучитьОбъект();
	Об.ИмяДокумента = "Д_ЗаявкаНаФинансирование";
	Об.Записать();
	
	Об = Справочники.Д_ВидыВнутреннихДокументов.ЗаявкаНаСогласованиеДоговора.ПолучитьОбъект();
	Об.ИмяДокумента = "Д_ЗаявкаНаСогласованиеДоговора";
	Об.Записать();
	
	Об = Справочники.Д_ВидыВнутреннихДокументов.КорректировкаБюджета.ПолучитьОбъект();
	Об.ИмяДокумента = "Д_ЗаявкаНаКорректировкуБюджета";
	Об.Записать();
	
	УстановитьПривилегированныйРежим(Ложь);
	
КонецПроцедуры

&НаКлиенте
Процедура ОткрытьСтруктуруПредприятия(Команда)
	ОткрытьФорму("Справочник.Д_ВидыВнутреннихДокументов.ФормаСписка",,,,,,,РежимОткрытияОкнаФормы.БлокироватьОкноВладельца);
КонецПроцедуры

&НаКлиенте
Процедура Автонастройка(Команда)
	ВыполнитьАвтозаполение();
	Объект.Выполнено = Истина;
КонецПроцедуры


