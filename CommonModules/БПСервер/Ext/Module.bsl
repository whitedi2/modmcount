Процедура СоздатьСледующуюЗадачу(Задача, ИмяКоманды, ДопДанные, ЭтоФормаДоработки)
	
	КомандыДалее = Новый Массив;
	КомандыДалее.Добавить("ЗаявкаСогласована");
	КомандыДалее.Добавить("ОтправитьДалее");
	Если Не ЭтоФормаДоработки Тогда
		КомандыДалее.Добавить("ЗаявкаОплачена");
	КонецЕсли;
	КомандыДалее.Добавить("ОтправитьИЗакрыть");
	
	КомандыНазад = Новый Массив;
	КомандыНазад.Добавить("НаДоработку");

	КомандыОтмена = Новый Массив;
	КомандыОтмена.Добавить("ОтменаЗаявки");
	
	Если ТипЗнч(Задача.Заявка) = Тип("ДокументСсылка.Д_СлужебнаяЗаписка") 
		ИЛИ ТипЗнч(Задача.Заявка) = Тип("ДокументСсылка.Д_ЗаявкаНаФинансирование")
		ИЛИ ТипЗнч(Задача.Заявка) = Тип("ДокументСсылка.Д_ЗаявкаНаАвансовыйОтчет")
