	//	Список.Параметры.УстановитьЗначениеПараметра("ТекСумма", Параметры.ТекСумма);
	//Иначе
	//	Список.Параметры.УстановитьЗначениеПараметра("ТекСумма", 0);		
	//КонецЕсли;
	
КонецПроцедуры


