&НаСервереБезКонтекста
Функция СоздатьДокументыНаСервере(ИнвентаризацияСсылка)
	
	Результат = Новый Массив;
	Если Не ЗначениеЗаполнено(ИнвентаризацияСсылка.ВиртуальныйСкладДляИсправлений) Тогда
		Сообщить("Поле ""Склад для исправлений"" должно быть заполнено.");
		Возврат Результат;
	КонецЕсли;
	Результат = Новый Массив;
	ЗапросДокОснования = Новый Запрос;
	ЗапросДокОснования.Текст = 
	"ВЫБРАТЬ
	|	ПРЕДСТАВЛЕНИЕССЫЛКИ(УЧ_ПереводТМЦ.Ссылка) КАК Ссылка
	|ИЗ
	|	Документ.УЧ_ПереводТМЦ КАК УЧ_ПереводТМЦ
	|ГДЕ
	|	НЕ УЧ_ПереводТМЦ.ПометкаУдаления
	|	И УЧ_ПереводТМЦ.ДокОснование = &ДокОснование
	|
	|ОБЪЕДИНИТЬ ВСЕ
	|
	|ВЫБРАТЬ
	|	ПРЕДСТАВЛЕНИЕССЫЛКИ(УЧ_ПеремещениеТоваров.Ссылка)
	|ИЗ
	|	Документ.УЧ_ПеремещениеТоваров КАК УЧ_ПеремещениеТоваров
	|ГДЕ
	|	НЕ УЧ_ПеремещениеТоваров.ПометкаУдаления
	|	И УЧ_ПеремещениеТоваров.ДокОснование = &ДокОснование";
	
	ЗапросДокОснования.УстановитьПараметр("ДокОснование", ИнвентаризацияСсылка);
	
	РезультатЗапросаДокОснования = ЗапросДокОснования.Выполнить();
	Если Не РезультатЗапросаДокОснования.Пустой() Тогда
		ВыборкаДокОснования = РезультатЗапросаДокОснования.Выбрать();
		Пока ВыборкаДокОснования.Следующий() Цикл
			Сообщить("Для данного документа инвентаризации уже создан документ исправления: " + ВыборкаДокОснования.Ссылка + ". Для повторного внесения исправлений необходимо пометить существующий документ-исправление на удаление.");	
		КонецЦикла;
		Возврат Результат;
	КонецЕсли;
	
	Запрос = Новый Запрос;
	Запрос.Текст = 
	"ВЫБРАТЬ
	|	УЧ_ИнвентаризацияТовары.НомерСтроки КАК НомерСтроки,
	|	УЧ_ИнвентаризацияТовары.Номенклатура КАК Номенклатура,
	|	УЧ_ИнвентаризацияТовары.СерияНоменклатуры КАК СерияНоменклатуры,
	|	УЧ_ИнвентаризацияТовары.СчетУчета КАК СчетУчета,
	|	УЧ_ИнвентаризацияТовары.КоличествоОтклонение КАК КоличествоОтклонение,
	|	УЧ_ИнвентаризацияТовары.СуммаОтклонение КАК СуммаОтклонение
	|ИЗ
	|	Документ.УЧ_Инвентаризация.Товары КАК УЧ_ИнвентаризацияТовары
	|ГДЕ
	|	УЧ_ИнвентаризацияТовары.Ссылка = &Ссылка
	|	И УЧ_ИнвентаризацияТовары.КоличествоОтклонение <> 0";
	
	Запрос.УстановитьПараметр("Ссылка", ИнвентаризацияСсылка);
	
	РезультатЗапроса = Запрос.Выполнить();
	Если РезультатЗапроса.Пустой() Тогда
		Сообщить("Отклонения для исправления отсутствуют"); 
		Возврат Результат;
	КонецЕсли;
	УстановитьПривилегированныйРежим(Истина);
	ТЗОтклонения = РезультатЗапроса.Выгрузить();
	ДокументПереводСоздан = Ложь;
	ДокументПереводОбъект = Неопределено;
	Для каждого СтрокаТЧ Из ТЗОтклонения Цикл
		Если СтрокаТЧ.КоличествоОтклонение < 0 Тогда
			СтруктураПоискаПеревод = Новый Структура;
			СтруктураПоискаПеревод.Вставить("Номенклатура",СтрокаТЧ.Номенклатура);
			СтруктураПоискаПеревод.Вставить("СчетУчета",СтрокаТЧ.СчетУчета);
			СтруктураПоискаПеревод.Вставить("КоличествоОтклонение",-СтрокаТЧ.КоличествоОтклонение);
			НайденнаяСерия = ТЗОтклонения.НайтиСтроки(СтруктураПоискаПеревод);
			Если НайденнаяСерия.Количество() > 0 Тогда
				Если Не ДокументПереводСоздан Тогда
					ДокументПереводОбъект = Документы.УЧ_ПереводТМЦ.СоздатьДокумент();
					ЗаполнитьЗначенияСвойств(ДокументПереводОбъект, ИнвентаризацияСсылка, ,"Номер, Комментарий");
					ДокументПереводОбъект.ДокОснование 	= ИнвентаризацияСсылка;
					ДокументПереводОбъект.ВидОперации 	= Перечисления.ВидыПеремещений.Перемещение;
					ДокументПереводОбъект.СкладПолучатель = ИнвентаризацияСсылка.Склад;
					ДокументПереводОбъект.Автор = ПараметрыСеанса.ТекущийПользователь;
					ДокументПереводСоздан = Истина;
				КонецЕсли;
				НоваяСтрокаТЧПеревод = ДокументПереводОбъект.ТабличнаяЧасть.Добавить();
				НоваяСтрокаТЧПеревод.Номенклатура = НайденнаяСерия[0].Номенклатура;
				НоваяСтрокаТЧПеревод.Количество = НайденнаяСерия[0].КоличествоОтклонение;
				НоваяСтрокаТЧПеревод.СчетУчетаБУ = НайденнаяСерия[0].СчетУчета;
				НоваяСтрокаТЧПеревод.НовыйСчетУчетаБУ = НайденнаяСерия[0].СчетУчета;
				НоваяСтрокаТЧПеревод.КоличествоНовое = НайденнаяСерия[0].КоличествоОтклонение;
				НоваяСтрокаТЧПеревод.НоменклатураНовая = НайденнаяСерия[0].Номенклатура; 
				НоваяСтрокаТЧПеревод.СерияНоменклатуры = СтрокаТЧ.СерияНоменклатуры;
				НоваяСтрокаТЧПеревод.СерияНоменклатурыНовая = НайденнаяСерия[0].СерияНоменклатуры;
				СтрокаТЧ.КоличествоОтклонение = 0;
				НайденнаяСерия[0].КоличествоОтклонение = 0;
			КонецЕсли; 
		КонецЕсли;	
	КонецЦикла;
	Если ДокументПереводСоздан Тогда
		Попытка
			ДокументПереводОбъект.Записать(РежимЗаписиДокумента.Запись); 
			Результат.Добавить(ДокументПереводОбъект.Ссылка);
		Исключение
			Сообщить(ОписаниеОшибки());
		КонецПопытки;
	КонецЕсли;
	ДокументПеремещениеСоздан = Ложь;
	ДокументПеремещениеОбъект = Неопределено;
	Для каждого СтрокаТЧ Из ТЗОтклонения Цикл
		Если СтрокаТЧ.КоличествоОтклонение <> 0 Тогда	
			Если Не ДокументПеремещениеСоздан Тогда 
				ДокументПеремещениеОбъект = Документы.УЧ_ПеремещениеТоваров.СоздатьДокумент();
				ЗаполнитьЗначенияСвойств(ДокументПеремещениеОбъект, ИнвентаризацияСсылка, ,"Номер, Комментарий");
				ДокументПеремещениеОбъект.ДокОснование 	= ИнвентаризацияСсылка;
				ДокументПеремещениеОбъект.ВидОперации 	= Перечисления.ВидыПеремещений.Перемещение; 
				ДокументПеремещениеОбъект.СкладПолучатель =  ИнвентаризацияСсылка.ВиртуальныйСкладДляИсправлений;
				ДокументПеремещениеОбъект.Автор = ПараметрыСеанса.ТекущийПользователь;
