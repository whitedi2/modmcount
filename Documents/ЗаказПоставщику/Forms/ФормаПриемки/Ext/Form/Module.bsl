	ТекущиеДанные.Сумма 	= ТекущиеДанные.КоличествоКОформлению * ТекущиеДанные.Цена;
	ТекущиеДанные.СуммаНДС 	= ТекущиеДанные.Сумма / ((100+ТекущиеДанные.СтавкаНДССтавка)/100) * (ТекущиеДанные.СтавкаНДССтавка/100);
