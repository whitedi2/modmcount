	ТекущиеДанные.СуммаДок 		= ТекущиеДанные.КоличествоДок * ТекущиеДанные.ЦенаДок;
	ТекущиеДанные.СуммаНДСДок 	= ТекущиеДанные.СуммаДок / ((100+ТекущиеДанные.СтавкаНДССтавка)/100) * (ТекущиеДанные.СтавкаНДССтавка/100);
	
	ЗаполнитьПодвалТЗ();
		
